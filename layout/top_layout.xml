<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#00000000"
    android:orientation="horizontal" >
    <LinearLayout 
          android:id="@+id/id_tab_all_phone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/all_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_phone"
            android:clickable="false"
            android:textSize="20sp"
            />
        
        </LinearLayout>
        
      <LinearLayout 
          android:id="@+id/id_tab_gone_phone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        
        >
        <TextView 
            android:id="@+id/gone_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gone_phone"
            android:clickable="false"
            android:textSize="20sp"/>
        
        </LinearLayout>
        
        
      <LinearLayout 
          android:id="@+id/id_tab_never_phone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/never_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/never_phone"
            android:clickable="false"
            android:textSize="20sp"/>
        
        </LinearLayout>
    

</LinearLayout>
